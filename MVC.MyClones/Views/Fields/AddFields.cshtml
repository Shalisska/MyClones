@model MVC.MyClones.Models.Fields.AddFieldsInputModel

@{ 
    var locations = ViewData["Locations"] as SelectList;
}

    <form asp-action="AddFields">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Count" class="control-label"></label>
            <input asp-for="Count" class="form-control" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocationId" class="control-label"></label>
            <select asp-for="LocationId" asp-items="locations">
                <option selected="selected" disabled="disabled">Location</option>
            </select>

            <span asp-validation-for="LocationId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="AddFields" class="btn btn-primary" />
        </div>
    </form>
