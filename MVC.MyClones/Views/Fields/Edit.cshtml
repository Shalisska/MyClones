@using Domain.Entities.Fields

@model MVC.MyClones.Models.Fields.EditFieldModelInput

@{ 
    var crops = ViewData["Crops"] as SelectList;
    var stages = Html.GetEnumSelectList<AgriculturalStageEnum>();
}

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="CultureId" class="control-label"></label>
            <select asp-for="CultureId" asp-items="crops">
                <option selected="selected" disabled="disabled">Culture</option>
            </select>
            <span asp-validation-for="CultureId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrentStage" class="control-label"></label>
            <select asp-for="CurrentStage" asp-items="stages">
                <option selected="selected" disabled="disabled">Stage</option>
            </select>
            <span asp-validation-for="CurrentStage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" type="datetime" class="form-control" value="@DateTime.Now" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>
